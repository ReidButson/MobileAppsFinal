<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateRecipe">

    <EditText
        android:id="@+id/recipe_name_entry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="58dp"
        android:ems="10"
        android:hint="@string/hint_recipe_name"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/save_recipe_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recipe_name_entry"
        android:layout_alignEnd="@+id/recipe_name_entry"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:text="@string/btn_confirm" />
</RelativeLayout>